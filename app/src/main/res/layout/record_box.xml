<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/recordingBox"
    android:orientation="vertical"
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/recordingBoxHeader"
        android:layout_width="@dimen/record_box_header_width"
        android:layout_height="@dimen/record_box_header_height"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="RecordElement"
        android:textSize="16dp"
        android:textAlignment="center"
         />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/record_box_core_width"
            android:layout_height="@dimen/record_box_core_height"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/recordingBoxCore"
            android:textSize="23dp"
            android:gravity="right" />

        <TextView
            android:id="@+id/recordingBoxUnit"
            android:layout_width="@dimen/record_box_unit_width"
            android:layout_height="@dimen/record_box_unit_height"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="18dp" />

    </LinearLayout>
</LinearLayout>