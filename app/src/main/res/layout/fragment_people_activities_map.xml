<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content_frame">


    </FrameLayout>

    <RelativeLayout
        android:id="@+id/activityPreview"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dp"
        android:background="@color/black"
        >

        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="7dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/distanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/profilePic"
            android:layout_marginStart="7dp"
            android:text="Distance"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/distanceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/distanceText"
            android:layout_toEndOf="@+id/profilePic"
            android:layout_marginStart="7dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/unitTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/distanceTextView"
            android:layout_below="@+id/distanceText"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/durationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration"
            android:textSize="16sp"
            android:layout_toEndOf="@+id/distanceText"
            android:layout_marginStart="14dp"/>

        <TextView
            android:id="@+id/durationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/durationText"
            android:layout_alignStart="@+id/durationText"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/caloriesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories"
            android:textSize="16sp"
            android:layout_toEndOf="@+id/durationText"
            android:layout_marginStart="14dp"
            />

        <TextView
            android:id="@+id/caloriesTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/caloriesText"
            android:layout_alignStart="@+id/caloriesText"
            android:layout_marginStart="25dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/stepsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steps"
            android:textSize="16sp"
            android:layout_toEndOf="@+id/caloriesText"
            android:layout_marginStart="14dp"
            />

        <TextView
            android:id="@+id/stepsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stepsText"
            android:layout_alignStart="@+id/stepsText"
            android:layout_marginStart="25dp"
            android:textSize="18sp"/>

    </RelativeLayout>

</RelativeLayout>